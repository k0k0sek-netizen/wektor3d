---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Wiadomo wysana | Wektor 3D">
  <Navbar />
  <main class="min-h-screen flex flex-col items-center justify-center bg-zinc-950 px-6 pt-20 pb-10 text-center">
    <div class="w-24 h-24 bg-green-500/10 rounded-full flex items-center justify-center mb-8 animate-pulse">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-12 h-12 text-green-500"><path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" /></svg>
    </div>
    <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">Wiadomo Wysana! </h1>
    <p class="text-xl text-zinc-400 max-w-2xl mx-auto mb-12">Dziki za kontakt. Wstpn wycen otrzymasz zazwyczaj w cigu <strong>2 godzin</strong>.</p>
    <a href="/" id="back-home-btn" class="px-8 py-3 bg-orange-700 hover:bg-orange-600 text-white font-bold rounded-xl transition-all shadow-lg shadow-orange-900/20">Wr贸 na Stron G贸wn</a>
  </main>
  <Footer />
</Layout>

<script>
  const backBtn = document.getElementById('back-home-btn');

  if (backBtn) {
    backBtn.addEventListener('click', (e) => {
      e.preventDefault(); // Zatrzymaj natychmiastowe przejcie
      const href = backBtn.getAttribute('href');

      // 1. Ustawienie styl贸w wyjcia na body
      document.body.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
      document.body.style.opacity = '0';
      document.body.style.transform = 'translateY(-10px)'; // Lekki ruch w g贸r przy znikaniu

      // 2. Przekierowanie po zakoczeniu animacji
      setTimeout(() => {
        window.location.href = href;
      }, 500);
    });
  }
</script>
