---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Scene3D from '../components/react/Scene3D.jsx';
import Navbar from '../components/Navbar.astro';
import TrustBar from '../components/TrustBar.astro';
import Offer from '../components/Offer.astro';
import Sources from '../components/Sources.astro';
import Process from '../components/Process.astro';
import Technology from '../components/Technology.astro';
import Materials from '../components/Materials.astro';
import Portfolio from '../components/Portfolio.astro';
import About from '../components/About.astro';
import Calculator from '../components/Calculator.astro';
import Faq from '../components/Faq.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Drukarnia 3D - Prototypowanie i Produkcja">
	<Navbar />
	<main>
		<Hero />
    <section class="py-12 bg-zinc-950 border-b border-zinc-800 relative z-10">
      <div class="container mx-auto px-6">
        <div class="text-center mb-8 fade-in-section">
          <h2 class="text-3xl font-bold text-white mb-2">Technologia w Twoich RÄ™kach</h2>
          <p class="text-zinc-400">Obracaj i sprawdzaj detale. To jest renderowane w czasie rzeczywistym.</p>
        </div>

        <div class="fade-in-section max-w-4xl mx-auto">
          <Scene3D client:visible />
        </div>
      </div>
    </section>
		<TrustBar />
		<Offer />
		<Sources />
		<Process />
		<Technology />
		<Materials />
		<Portfolio />
		<About />
		<Calculator />
		<Faq />
		<Contact />
	</main>
	<Footer />
</Layout>
