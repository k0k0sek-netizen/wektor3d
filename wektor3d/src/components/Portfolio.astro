---
const projects = [
  {
    title: "Prototyp obudowy",
    description: "Funkcjonalny prototyp obudowy urządzenia IoT.",
    material: "ASA",
    image: "https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?q=80&w=800&auto=format&fit=crop",
    size: "col-span-1 md:col-span-1"
  },
  {
    title: "Części Zamienne AGD/RTV",
    description: "Odtworzona zębatka do mechanizmu rolety/miksera.",
    material: "PETG/Nylon",
    image: "https://images.unsplash.com/photo-1615655406736-b37c4fabf923?q=80&w=800&auto=format&fit=crop",
    size: "col-span-1 md:col-span-1"
  },
  {
    title: "Elementy Amortyzujące",
    description: "Tuleje, odbojniki i nóżki wykonane z elastycznego materiału.",
    material: "TPU 95A",
    image: "https://images.unsplash.com/photo-1537462715879-360eeb61a0ad?q=80&w=800&auto=format&fit=crop",
    size: "col-span-1 md:col-span-2"
  },
  {
    title: "Obudowy do Elektroniki",
    description: "Personalizowana obudowa pod układy Arduino/Raspberry Pi.",
    material: "ASA",
    image: "https://images.unsplash.com/photo-1486325212027-8081e485255e?q=80&w=800&auto=format&fit=crop",
    size: "col-span-1 md:col-span-1"
  }
];
---

<section class="py-24 bg-zinc-950 text-white fade-in-section" id="realizacje">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-5xl bg-clip-text text-transparent bg-gradient-to-b from-white via-zinc-200 to-zinc-500 font-bold tracking-tight mb-4">Zobacz Nasze Realizacje</h2>
      <p class="text-zinc-400 text-lg">Jakość, którą dostarczamy w każdym detalu.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {projects.map((project) => (
        <div class={`group relative overflow-hidden rounded-2xl aspect-[4/3] ${project.size}`}>
          <!-- Image -->
          <img 
            src={project.image} 
            alt={project.title}
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
          />
          
          <!-- Overlay & Content -->
          <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-6">
            <h3 class="text-xl font-bold text-white translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
              {project.title}
            </h3>
            <p class="text-zinc-300 text-sm mt-1 translate-y-4 group-hover:translate-y-0 transition-transform duration-300 delay-75">
              {project.description}
            </p>
            <p class="text-orange-400 font-medium mt-2 translate-y-4 group-hover:translate-y-0 transition-transform duration-300 delay-100">
              {project.material}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
