---

import { contentfulClient } from '../lib/contentful';

// Fallback data (zachowane na wypadek błędu API)
const fallbackProjects = [
  {
    title: "Części Zamienne AGD/RTV",
    description: "Odtworzona zębatka do mechanizmu rolety lub miksera.",
    material: "PETG/Nylon",
    image: "/portfolio/agd_petg.webp",
    size: "col-span-1 md:col-span-1"
  },
  {
    title: "Obudowy do Elektroniki",
    description: "Personalizowana obudowa pod układy Arduino/Raspberry Pi.",
    material: "ASA",
    image: "/portfolio/asa_rpi.webp",
    size: "col-span-1 md:col-span-1"
  },
  {
    title: "Elementy Amortyzujące",
    description: "Tuleje, odbojniki i nóżki wykonane z elastycznego materiału.",
    material: "TPU 95A",
    image: "/portfolio/tpu95a.webp",
    size: "col-span-1 md:col-span-1"
  },
  {
    title: "Część Techniczna / Uchwyt",
    description: "Wytrzymały uchwyt montażowy o podwyższonej sztywności.",
    material: "PETG CF",
    image: "/portfolio/uchwyt.webp",
    size: "col-span-1 md:col-span-1"
  },
  {
    title: "Prototypowanie",
    description: "Funkcjonalny prototyp obudowy urządzenia IoT.",
    material: "ASA/PLA",
    image: "/portfolio/asa_obudowa.webp",
    size: "col-span-1 md:col-span-2"
  }
];

let projects = fallbackProjects;

try {
  const entries = await contentfulClient.getEntries({
    content_type: 'realizacja',
    order: '-sys.createdAt'
  });
  
  if (entries.items.length > 0) {
    projects = entries.items.map((item) => {
      const { title, description, material, image } = item.fields;
      return {
        title,
        description,
        material,
        image: image?.fields?.file?.url ? `https:${image.fields.file.url}` : '/placeholder.webp',
        size: "col-span-1 md:col-span-1" // Domyślny rozmiar dla dynamicznych wpisów
      };
    });
  }
} catch (error) {
  console.error('Błąd pobierania z Contentful:', error);
  // W przypadku błędu zostaje fallbackProjects
}
---
<style>
  .no-callout {
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    user-select: none;
  }
</style>

<section class="py-24 bg-zinc-950 text-white fade-in-section" id="realizacje">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-5xl bg-clip-text text-transparent bg-gradient-to-b from-white via-zinc-200 to-zinc-500 font-bold tracking-tight mb-4">Zobacz Moje Realizacje</h2>
      <p class="text-zinc-400 text-lg">Jakość, którą dostarczam w każdym detalu.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {projects.map((project) => (
        <div class={`group relative overflow-hidden rounded-2xl aspect-[4/3] ${project.size} select-none touch-manipulation no-callout js-touch-card cursor-pointer tap-highlight-transparent`}>
          <!-- Image -->
          <!-- Image -->
          <img 
            src={project.image} 
            alt={project.title}
            loading="lazy"
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110 group-active:scale-105 [.active_&]:scale-105"
          />
          
          <!-- Overlay & Content -->
          <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/20 to-transparent opacity-0 group-hover:opacity-100 group-active:opacity-100 [.active_&]:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-6">
            <h3 class="text-xl font-bold text-white translate-y-4 group-hover:translate-y-0 group-active:translate-y-0 [.active_&]:translate-y-0 transition-transform duration-300">
              {project.title}
            </h3>
            <p class="text-zinc-300 text-sm mt-1 translate-y-4 group-hover:translate-y-0 group-active:translate-y-0 [.active_&]:translate-y-0 transition-transform duration-300 delay-75">
              {project.description}
            </p>
            <p class="text-orange-400 font-medium mt-2 translate-y-4 group-hover:translate-y-0 group-active:translate-y-0 [.active_&]:translate-y-0 transition-transform duration-300 delay-100">
              {project.material}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
