---
const projects = [
  {
    title: "Prototyp obudowy",
    material: "ASA",
    image: "https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?q=80&w=800&auto=format&fit=crop",
    size: "col-span-1 md:col-span-1"
  },
  {
    title: "Figurka kolekcjonerska",
    material: "PLA Silk",
    image: "https://images.unsplash.com/photo-1615655406736-b37c4fabf923?q=80&w=800&auto=format&fit=crop",
    size: "col-span-1 md:col-span-1"
  },
  {
    title: "Część techniczna",
    material: "PETG-CF",
    image: "https://images.unsplash.com/photo-1631541909061-71e349d1f203?q=80&w=800&auto=format&fit=crop",
    size: "col-span-1 md:col-span-1"
  },
  {
    title: "Uszczelka",
    material: "TPU 95A",
    image: "https://images.unsplash.com/photo-1537462715879-360eeb61a0ad?q=80&w=800&auto=format&fit=crop",
    size: "col-span-1 md:col-span-2"
  },
  {
    title: "Makieta architektoniczna",
    material: "PLA Matte",
    image: "https://images.unsplash.com/photo-1486325212027-8081e485255e?q=80&w=800&auto=format&fit=crop",
    size: "col-span-1 md:col-span-1"
  }
];
---

<section class="py-24 bg-zinc-950 text-white" id="realizacje">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-5xl font-bold mb-4">Zobacz Nasze Realizacje</h2>
      <p class="text-zinc-400 text-lg">Jakość, którą dostarczamy w każdym detalu.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {projects.map((project) => (
        <div class={`group relative overflow-hidden rounded-2xl aspect-[4/3] ${project.size}`}>
          <!-- Image -->
          <img 
            src={project.image} 
            alt={project.title}
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
          />
          
          <!-- Overlay & Content -->
          <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-6">
            <h3 class="text-xl font-bold text-white translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
              {project.title}
            </h3>
            <p class="text-orange-400 font-medium translate-y-4 group-hover:translate-y-0 transition-transform duration-300 delay-75">
              {project.material}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
