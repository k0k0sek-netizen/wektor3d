---
import LogoIcon from './LogoIcon.astro';
---

<nav transition:persist class="fixed top-0 w-full z-50 bg-zinc-950/90 backdrop-blur-xl border-b border-white/5">
  <div class="container mx-auto px-6 h-20 flex items-center justify-between relative z-50">
    
    <a href="/" id="site-logo" class="group flex items-center gap-3 z-50 relative select-none" aria-label="Wektor 3D - Strona Główna">
      <LogoIcon />

      <span class="text-xl font-bold tracking-tighter text-white group-hover:text-orange-100 transition-colors">
        Wektor 3D
      </span>
    </a>

    <div class="hidden md:flex gap-8 items-center">
      <a href="/#oferta" class="text-sm font-medium text-zinc-300 hover:text-white transition-colors">Oferta</a>
      <a href="/#technologia" class="text-sm font-medium text-zinc-300 hover:text-white transition-colors">Technologia</a>
      <a href="/#realizacje" class="text-sm font-medium text-zinc-300 hover:text-white transition-colors">Realizacje</a>
      <a href="/#kalkulator" class="text-sm font-medium text-zinc-300 hover:text-white transition-colors">Kalkulator</a>
      
      <a href="https://wektor-kodu.vercel.app" target="_blank" class="flex items-center gap-2 text-sm text-zinc-400 hover:text-teal-400 transition-colors border-l border-white/10 pl-6">
        Software
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
      </a>

      <a href="/#kontakt" class="px-5 py-2.5 bg-orange-700 hover:bg-orange-600 text-white text-sm font-bold rounded-lg transition-colors shadow-lg shadow-orange-900/20">
        DARMOWY AUDYT
      </a>
    </div>

    <button id="menu-btn" class="md:hidden p-2 text-white focus:outline-none relative z-50" aria-label="Otwórz menu">
      <svg id="icon-open" class="w-8 h-8 transition-all duration-300 transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
      <svg id="icon-close" class="w-8 h-8 absolute top-2 left-2 transition-all duration-300 transform opacity-0 scale-50 rotate-45" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
    </button>
  </div>

  <div id="mobile-menu" class="fixed inset-0 z-40 bg-zinc-950 flex flex-col items-center justify-center transition-all duration-300 ease-in-out translate-x-full opacity-0 pointer-events-none h-[100dvh] w-screen">
    
    <nav class="flex flex-col items-center gap-8 w-full px-6">
      <a href="/#oferta" class="mobile-link text-3xl font-bold text-zinc-400 hover:text-white transition-colors">Oferta</a>
      <a href="/#technologia" class="mobile-link text-3xl font-bold text-zinc-400 hover:text-white transition-colors">Technologia</a>
      <a href="/#realizacje" class="mobile-link text-3xl font-bold text-zinc-400 hover:text-white transition-colors">Realizacje</a>
      <a href="/#kalkulator" class="mobile-link text-3xl font-bold text-zinc-400 hover:text-white transition-colors">Kalkulator</a>
      <a href="/#faq" class="mobile-link text-3xl font-bold text-zinc-400 hover:text-white transition-colors">FAQ</a>

      <div class="w-20 h-px bg-zinc-800 my-2"></div>

      <a href="https://wektor-kodu.vercel.app" target="_blank" class="text-xl text-teal-400 hover:text-teal-300 flex items-center gap-2">
        Wektor Kodu (IT)
      </a>

      <a href="/#kontakt" class="mobile-link mt-6 px-8 py-4 bg-orange-700 text-white text-xl font-bold rounded-xl w-full text-center max-w-xs shadow-orange-900/20">
        Skonsultuj Projekt
      </a>
    </nav>
  </div>
</nav>

<script>
  const btn = document.getElementById('menu-btn');
  const menu = document.getElementById('mobile-menu');
  const iconOpen = document.getElementById('icon-open');
  const iconClose = document.getElementById('icon-close');
  const allLinks = document.querySelectorAll('a[href^="/#"]'); // Wybiera linki kotwic

  let isOpen = false;

  function toggleMenu() {
    isOpen = !isOpen;
    if (isOpen) {
      menu.classList.remove('translate-x-full', 'opacity-0', 'pointer-events-none');
      menu.classList.add('translate-x-0', 'opacity-100', 'pointer-events-auto');
      document.body.style.overflow = 'hidden';
      iconOpen.classList.add('opacity-0', 'rotate-90');
      iconClose.classList.remove('opacity-0', 'scale-50', 'rotate-45');
      iconClose.classList.add('opacity-100', 'scale-100', 'rotate-0');
    } else {
      menu.classList.add('translate-x-full', 'opacity-0', 'pointer-events-none');
      menu.classList.remove('translate-x-0', 'opacity-100', 'pointer-events-auto');
      document.body.style.overflow = '';
      iconOpen.classList.remove('opacity-0', 'rotate-90');
      iconClose.classList.add('opacity-0', 'scale-50', 'rotate-45');
      iconClose.classList.remove('opacity-100', 'scale-100', 'rotate-0');
    }
  }

  function handleLinkClick(e) {
    const href = this.getAttribute('href');
    
    // Sprawdzamy czy jesteśmy na stronie głównej
    if (window.location.pathname === '/' || window.location.pathname === '') {
      e.preventDefault(); // Blokujemy przeładowanie tylko na głównej
      
      const targetId = href.replace('/', ''); // Zamienia /#kontakt na #kontakt
      const targetElement = document.querySelector(targetId);

      if (isOpen) toggleMenu(); // Zamknij mobile menu jeśli otwarte

      if (targetElement) {
        // Małe opóźnienie dla mobile menu, zero dla desktopu
        setTimeout(() => {
             targetElement.scrollIntoView({ behavior: 'smooth' });
        }, isOpen ? 300 : 0);
      }
    } else {
      // Jesteśmy na podstronie (np. /dziekuje) -> NIE blokujemy zdarzenia.
      // Przeglądarka sama przeniesie na stronę główną do kotwicy.
      if (isOpen) toggleMenu();
    }
  }

  btn.addEventListener('click', toggleMenu);
  allLinks.forEach(link => link.addEventListener('click', handleLinkClick));

  // Obsługa kliknięcia w Logo
  const logoLink = document.getElementById('site-logo');

  if (logoLink) {
    logoLink.addEventListener('click', (e) => {
      // Sprawdź, czy użytkownik jest na stronie głównej
      if (window.location.pathname === '/' || window.location.pathname === '') {
        e.preventDefault(); // Zatrzymaj przeładowanie
        window.scrollTo({
          top: 0,
          behavior: 'smooth'
        });
      }
      // Jeśli jest na podstronie, link zadziała domyślnie (przeniesie na główną)
    });
  }
</script>
