<script>
  const btn = document.getElementById('menu-btn');
  const menu = document.getElementById('mobile-menu');
  const iconOpen = document.getElementById('icon-open');
  const iconClose = document.getElementById('icon-close');
  const mobileLinks = menu.querySelectorAll('a');
  let isOpen = false;

  function toggleMenuState() {
    isOpen = !isOpen;
    console.log('Stan menu:', isOpen ? 'Otwarte' : 'Zamknięte');
    
    if (isOpen) {
      menu.classList.remove('translate-x-full');
      document.body.style.overflow = 'hidden'; // LOCK
    } else {
      menu.classList.add('translate-x-full');
      document.body.style.overflow = ''; // UNLOCK
    }
    
    // Obsługa ikon
    if(isOpen) {
        iconOpen.classList.add('opacity-0', 'rotate-90');
        iconClose.classList.remove('opacity-0', 'scale-50');
        iconClose.classList.add('rotate-0', 'scale-100');
    } else {
        iconOpen.classList.remove('opacity-0', 'rotate-90');
        iconClose.classList.add('opacity-0', 'scale-50');
        iconClose.classList.remove('rotate-0', 'scale-100');
    }
  }

  function handleLinkClick(e) {
    if (!isOpen) return;
    e.preventDefault();
    
    const targetId = this.getAttribute('href');
    console.log('1. Kliknięto link mobilny:', targetId);

    // KROK 1: Odblokuj scroll i zamknij menu
    toggleMenuState();
    console.log('2. Menu zamknięte, scroll odblokowany');

    const targetElement = document.querySelector(targetId);
    if (targetElement) {
        // KROK 2: Poczekaj 350ms (niech menu zjedzie) i przewiń
        setTimeout(() => {
             console.log('3. Wykonuję przewinięcie do:', targetId);
             targetElement.scrollIntoView({
               behavior: 'smooth',
               block: 'start'
             });
        }, 350);
    } else if (targetId.startsWith('http')) {
        // Obsługa linków zewnętrznych (np. Wektor Kodu)
        window.open(targetId, '_blank');
    }
  }

  btn.addEventListener('click', toggleMenuState);
  mobileLinks.forEach(link => link.addEventListener('click', handleLinkClick));
</script>
