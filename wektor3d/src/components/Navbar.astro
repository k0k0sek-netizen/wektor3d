<script>
  const btn = document.getElementById('menu-btn');
  const menu = document.getElementById('mobile-menu');
  const links = document.querySelectorAll('.mobile-link');
  const iconOpen = document.getElementById('icon-open');
  const iconClose = document.getElementById('icon-close');
  let isOpen = false;

  function toggleMenu() {
    isOpen = !isOpen;
    
    if (isOpen) {
      // Otwieranie
      menu.classList.remove('opacity-0', 'pointer-events-none', 'invisible');
      menu.classList.add('opacity-100', 'pointer-events-auto', 'visible');
      document.body.style.overflow = 'hidden'; // Blokada scrolla
      
      // Ikony
      iconOpen.classList.add('hidden');
      iconClose.classList.remove('hidden');
    } else {
      // Zamykanie
      menu.classList.remove('opacity-100', 'pointer-events-auto', 'visible');
      menu.classList.add('opacity-0', 'pointer-events-none', 'invisible');
      document.body.style.overflow = ''; // Odblokowanie scrolla
      
      // Ikony
      iconOpen.classList.remove('hidden');
      iconClose.classList.add('hidden');
    }
  }

  btn.addEventListener('click', toggleMenu);
  
  // Każdy link zamyka menu natychmiast
  links.forEach(link => {
    link.addEventListener('click', toggleMenu);
  });
</script>
