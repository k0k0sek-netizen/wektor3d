<script>
  const btn = document.getElementById('menu-btn');
  const menu = document.getElementById('mobile-menu');
  const iconOpen = document.getElementById('icon-open');
  const iconClose = document.getElementById('icon-close');
  const links = document.querySelectorAll('.mobile-link');
  let isMenuOpen = false;

  function toggleMenu() {
    isMenuOpen = !isMenuOpen;

    if (isMenuOpen) {
      // Otwieranie
      menu.classList.remove('translate-x-full'); // Wjazd menu
      document.body.style.overflow = 'hidden';   // Blokada scrolla strony
      
      // Animacja ikony: Hamburger znika, X się pojawia
      iconOpen.classList.add('opacity-0', 'rotate-90');
      iconClose.classList.remove('opacity-0', 'scale-50');
      iconClose.classList.add('rotate-0', 'scale-100');
    } else {
      // Zamykanie
      menu.classList.add('translate-x-full');    // Wyjazd menu
      document.body.style.overflow = '';         // Odblokowanie scrolla
      
      // Animacja ikony: X znika, Hamburger wraca
      iconOpen.classList.remove('opacity-0', 'rotate-90');
      iconClose.classList.add('opacity-0', 'scale-50');
      iconClose.classList.remove('rotate-0', 'scale-100');
    }
  }

  // Obsługa przycisku
  btn.addEventListener('click', toggleMenu);

  // Obsługa kliknięcia w link (zamyka menu)
  links.forEach(link => {
    link.addEventListener('click', () => {
      if (isMenuOpen) toggleMenu();
    });
  });
</script>
