import Analytics from '@vercel/analytics/astro';

import CookieBanner from '../components/CookieBanner.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pl">
	<head>
		<meta charset="UTF-8" />
    <!-- SEO Główne -->
    <title>Wektor 3D | Precyzyjny Druk 3D & Inżynieria Odwrotna</title>
    <meta name="description" content="Profesjonalne usługi druku 3D i projektowania. Odtwarzanie części zamiennych, prototypowanie i małoseryjna produkcja. Sprawdź darmową wycenę online!">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.wektor3d.pl/" />
    <meta property="og:title" content="Wektor 3D | Precyzyjny Druk 3D & Inżynieria Odwrotna" />
    <meta property="og:description" content="Masz uszkodzoną część? Potrzebujesz prototypu? Realizuję wydruki techniczne z ASA, PET-G i Nylonu. Wycena w 2 godziny." />
    <meta property="og:image" content="https://www.wektor3d.pl/hero-poster.webp" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://www.wektor3d.pl/" />
    <meta property="twitter:title" content="Wektor 3D | Precyzyjny Druk 3D" />
    <meta property="twitter:description" content="Usługi inżynierii odwrotnej i druku 3D. Sprawdź naszą ofertę!" />
    <meta property="twitter:image" content="https://www.wektor3d.pl/hero-poster.webp" />

		<meta name="viewport" content="width=device-width" />
		<meta name="google-site-verification" content="F-7sFubmxJM_AE76GqMj8nA9IinvZz6WjKxP9vTYsVI" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<script type="application/ld+json">
		{
		  "@context": "https://schema.org",
		  "@type": "Service",
		  "name": "Wektor Kodu - Druk 3D",
		  "description": "Precyzyjne usługi druku 3D na zamówienie. Prototypowanie, części zamienne, modele.",
		  "provider": {
		    "@type": "LocalBusiness",
		    "name": "Wektor Kodu",
		    "image": "https://wektor3d.vercel.app/favicon.svg",
		    "priceRange": "$$"
		  },
		  "serviceType": "3D Printing",
		  "areaServed": "Poland",
		  "availableChannel": {
		    "@type": "ServiceChannel",
		    "serviceUrl": "https://wektor3d.vercel.app"
		  }
		}
		</script>
	</head>
	<body class="bg-zinc-950 text-zinc-300">
		<slot />
		<CookieBanner />
		<Analytics />
		<script>
			const observerOptions = { root: null, rootMargin: '0px', threshold: 0.1 };
			const observer = new IntersectionObserver((entries) => {
				entries.forEach(entry => {
					if (entry.isIntersecting) {
						entry.target.classList.add('show');
						observer.unobserve(entry.target);
					}
				});
			}, observerOptions);

			// Obsługa ładowania strony i View Transitions
			['DOMContentLoaded', 'astro:page-load'].forEach(event => {
				document.addEventListener(event, () => {
					const hiddenElements = document.querySelectorAll('.fade-in-section');
					hiddenElements.forEach((el) => observer.observe(el));
				});
			});
		</script>
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        // Znajdź wszystkie interaktywne karty na stronie
        const touchCards = document.querySelectorAll('.js-touch-card');

        touchCards.forEach(card => {
          card.addEventListener('click', (e) => {
            // Ignoruj kliknięcia w linki/przyciski wewnątrz karty (żeby dało się w nie kliknąć)
            if ((e.target as HTMLElement).tagName === 'A' || (e.target as HTMLElement).closest('a') || (e.target as HTMLElement).tagName === 'BUTTON') {
                return;
            }

            // 1. Sprawdź czy karta jest już aktywna
            const isAlreadyActive = card.classList.contains('active');

            // 2. Wyłącz wszystkie inne karty na całej stronie
            touchCards.forEach(c => c.classList.remove('active'));

            // 3. Przełącz klikniętą (jeśli nie była aktywna -> włącz)
            if (!isAlreadyActive) {
              card.classList.add('active');
            }
            
            e.stopPropagation();
          });
        });

        // Kliknięcie w tło czyści wszystko
        document.body.addEventListener('click', (e) => {
          if (!(e.target as HTMLElement).closest('.js-touch-card')) {
            touchCards.forEach(c => c.classList.remove('active'));
          }
        });
      });
    </script>
	</body>
</html>

<style is:global>
	.fade-in-section {
		opacity: 0;
		transform: translateY(30px);
		transition: opacity 0.8s ease-out, transform 0.8s ease-out;
		will-change: opacity, transform;
	}
	.fade-in-section.show {
		opacity: 1;
		transform: translateY(0);
	}

  .select-none {
    -webkit-touch-callout: none; /* iOS Safari */
    -webkit-user-select: none;   /* Safari */
    -khtml-user-select: none;    /* Konqueror HTML */
    -moz-user-select: none;      /* Old versions of Firefox */
    -ms-user-select: none;       /* Internet Explorer/Edge */
    user-select: none;           /* Non-prefixed version, currently supported by Chrome, Edge, Opera and Firefox */
  }
</style>
